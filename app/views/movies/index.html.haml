-#  This file is app/views/movies/index.html.haml
%h2 All Movies

= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings.has_key?(rating), :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => @title_hilite, :id => 'title_header'}= link_to 'Movie Title', movies_path(:sortby => 'title')
      %th Rating
      %th{:class => @release_hilite, :id => 'release_date_header'}= link_to 'Release Date', movies_path(:sortby => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
